@model IEnumerable<MiniLibrary.Models.Member>

@{
    ViewData["Title"] = "Membership";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>
<br />
<p>
    @if (!ViewBag.IsMember)
    {
        <h2>Be A Member Today!<br /></h2>
        <a asp-action="Purchase" class="btn btn-primary">Membership</a>
    }
    else
    {
        <a asp-action="Purchase" class="btn btn-primary">Extend</a>
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RegisterDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpiredDate)
            </th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RegisterDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpiredDate)
            </td>
            <td>
                @if (item.Active == true)
                {
                    <text>Active</text>
                }
                else
                {
                    <text>Expired</text>
                }
            </td>
        </tr>
}
    </tbody>
</table>
